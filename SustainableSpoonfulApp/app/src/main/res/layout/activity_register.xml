<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

    <!--Register Heading-->
    <TextView
        android:id="@+id/register_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:text="@string/register_label"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_margin="10sp"/>

    <!--Name Label-->
    <TextView
        android:id="@+id/register_name_heading"
        android:layout_below="@+id/register_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_name_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"/>

    <!--Name Text Box-->
    <EditText
        android:id="@+id/register_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_name_heading"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/register_name_placeholder"
        android:padding="10sp"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGrey"
        tools:ignore="TextContrastCheck" />

    <!--Surname Label-->
    <TextView
        android:id="@+id/register_surname_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_name_text"
        android:text="@string/register_surname_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"/>

    <!--Surname Text Box-->
    <EditText
        android:id="@+id/register_surname_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_surname_heading"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/register_surname_placeholder"
        android:padding="10sp"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGrey"
        tools:ignore="TextContrastCheck" />

    <!--Email Address Label-->
    <TextView
        android:id="@+id/register_email_address_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_surname_text"
        android:text="@string/register_email_address_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"/>

    <!--Email Address Text Box-->
    <EditText
        android:id="@+id/register_email_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email_address_heading"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/register_email_address_placeholder"
        android:padding="10sp"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGrey"
        tools:ignore="TextContrastCheck" />

    <!--Password Label-->
    <TextView
        android:id="@+id/register_password_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email_address_text"
        android:text="@string/register_password_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"/>

    <!--Password Text Box-->
    <EditText
        android:id="@+id/register_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_heading"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/register_password_placeholder"
        android:padding="10sp"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGrey"
        tools:ignore="TextContrastCheck" />

    <!--Confirm Password Label-->
    <TextView
        android:id="@+id/register_confirm_password_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_text"
        android:text="@string/register_confirm_password_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"/>

    <!--Confirm Password Text Box-->
    <EditText
        android:id="@+id/register_confirm_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_confirm_password_heading"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/register_confirm_password_placeholder"
        android:padding="10sp"
        android:textColorHint="@color/lightGrey"
        tools:ignore="TextContrastCheck" />

    <!--Confirm Button-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_confirm_password_text"
        android:text="@string/register_confirmBtn"
        android:textSize="20sp"
        android:backgroundTint="@color/pink"
        android:layout_centerHorizontal="true"
        android:layout_margin="50sp"
        android:padding="20sp"/>
</RelativeLayout>

